header.header(class=errorCode && "header--error")
    a.header__logo.logo(href='/')
        img.logo__image(src='/img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
        span.logo__name Типотека
    if user
        if user.id === 1
            button.button.button--colored.header__button-new
                a(href='/articles/add') Новая запись
            .header__dropdown
                a.button.button--burger.header__burger(href='#') Открыть меню
                ul.navigation.header__navigation
                    li.navigation__item
                        a(href='/my') Публикации
                    li.navigation__item
                        a(href='/my/categories') Категории
                    li.navigation__item
                        a(href='/my/comments') Комментарии
                    li.navigation__item
                        a(href='/logout') Выход
        else
            nav.header__nav
                ul.header__nav-list
                    li.header__list-item
                        p #{user.firstName + " " + user.lastName}
                    li.header__list-item
                        a.header__exit(href='/logout') Выйти
            a.header__avatar.avatar
                if user.avatar
                    img(src=`/img/${user.avatar}` alt='аватар пользователя')
    else
        nav.header__nav
            ul.header__nav-list
                li.header__list-item
                    a.header__popup(href='/register') Регистрация
                li.header__list-item
                    a.header__enter(href='/login') Вход с паролем
    a.header__search.button.button--search(href='/search' aria-label='поиск по сайту')
